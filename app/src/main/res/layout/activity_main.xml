<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.ryx.ryx.ui.activity.MainActivity">
    <FrameLayout
        android:id="@+id/fl_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/common_bg"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_gray"/>

    <com.neo.duan.ui.widget.MainNavTabBarView
        android:id="@+id/main_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="51dp"
        android:background="@color/common_white"
        app:bgColorOff="@color/common_white"
        app:bgColorOn="@color/common_white"
        app:defaultIconSelected="@null"
        app:textColorOff="@color/common_gray"
        app:textColorOn="@color/shallow_orange" />

</LinearLayout>

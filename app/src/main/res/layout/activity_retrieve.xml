<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_retrieve"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg"
    android:layout_height="match_parent"
    tools:context="com.ryx.ryx.ui.activity.RetrieveActivity">
    <com.ryx.ryx.ui.view.FocusEditTextView
        android:id="@+id/et_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        app:hintText="您的手机号码：135455***55"
        />

    <RelativeLayout
        android:id="@+id/rl_verification"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:background="@drawable/login_style"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_height="@dimen/dp_50">

        <EditText
            android:id="@+id/et_verification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入验证码"
            android:textSize="@dimen/sp_12"
            android:background="@null"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />

        <TextView
            android:id="@+id/tv_verification"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:layout_marginRight="@dimen/dp_25"
            android:textColor="@color/price_color"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="@dimen/sp_10"
            android:background="@null"
            />

    </RelativeLayout>
    <com.ryx.ryx.ui.view.FocusEditTextView
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:hintText="请输入8-16字母及数字组合的密码"
        />
    <com.ryx.ryx.ui.view.FocusEditTextView
        android:id="@+id/et_again_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:hintText="请再次输入8-16字母及数字组合的密码"
        />


    <Button
        android:id="@+id/btn_retrieve"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:background="@drawable/selector_common_orange_btn"
        android:text="找回密码"
        android:textColor="@color/common_white"
        android:textSize="@dimen/sp_16"/>



</LinearLayout>

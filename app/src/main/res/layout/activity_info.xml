<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_bg"
    tools:context="com.ryx.ryx.ui.activity.InfoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_16"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_height="108dp">
                <com.neo.duan.ui.widget.app.XImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:visibility="visible"
                    fresco:actualImageScaleType="focusCrop"
                    fresco:fadeDuration="300"
                    fresco:failureImage="@mipmap/ic_default_head"
                    fresco:failureImageScaleType="centerInside"
                    fresco:placeholderImage="@mipmap/ic_default_head"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:retryImageScaleType="centerCrop"
                    fresco:roundAsCircle="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:id="@+id/ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="0"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/iv_portrait"
                    android:layout_toEndOf="@+id/iv_portrait"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginLeft="@dimen/dp_10"
                >
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="张小凡"
                        android:textColor="@color/common_black"
                        android:textSize="@dimen/sp_18"
                        android:layout_alignTop="@+id/ll_name"
                        android:layout_alignLeft="@+id/ll_name"
                        android:layout_alignStart="@+id/ll_name" />


                    <TextView
                    android:id="@+id/tv_genghuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更换头像"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/price_color"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="@dimen/dp_10"
                    />
            </LinearLayout>
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_below="@+id/ll_name"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="注册日期:2017年3月15日"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/iv_portrait"
                        android:layout_toEndOf="@+id/iv_portrait"
                        android:textColor="@color/common_gray"
                        android:textSize="@dimen/sp_14" />


            </RelativeLayout>
            <include layout="@layout/layout_gray_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <include layout="@layout/layout_gray_line" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray_line" />

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_7"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="完善个人信息将获得"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableLeft="@mipmap/hui_01"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/tv_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/sp_14"
                    android:text="20元"
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_gray"
                    android:textSize="@dimen/sp_14"
                    android:text="代金劵奖励"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >
            <com.ryx.ryx.ui.view.InfoEditTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintText="138****8839"
            app:editType="number"
            app:titleText="手机号码"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_gray_line"/>
                <com.ryx.ryx.ui.view.InfoEditTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintText="小凡凡"
                    app:editType="number"
                    app:titleText="用户名"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/common_gray_line"/>


            <com.ryx.ryx.ui.view.InfoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:value="女"
                app:titleText="性别"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray_line"/>
            <com.ryx.ryx.ui.view.InfoEditTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintText="fan16633@163.com"
                app:editType="number"
                app:titleText="邮箱"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray_line"/>
            <com.ryx.ryx.ui.view.InfoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:value="在线教育"
                app:titleText="行业"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray_line"/>
            <com.ryx.ryx.ui.view.InfoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:value="深圳"
                app:titleText="所在地"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_gray_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="0"
                android:background="@color/white"
                android:paddingTop="@dimen/dp_25"
                android:paddingBottom="@dimen/dp_40"
                android:orientation="horizontal"
                >
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:background="@drawable/selector_common_orange_btn"
                android:text="提交"
                android:textColor="@color/common_white"
                android:textSize="@dimen/sp_14"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="以后再说"
                    android:textSize="@dimen/sp_14"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

<resources>
    <!--底部弹出对话框style-->
    <style name="MyDialogStyleBottom">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <!-- <item name="android:windowFullscreen">true</item> -->
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <!-- <item name="android:windowIsFloating">true</item> -->
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!--弹出框状态栏颜色-->
        <item name="colorPrimary">@color/common_transparent</item>
        <item name="colorPrimaryDark">@color/common_transparent</item>
        <item name="colorAccent">@color/common_transparent</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/anim_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_push_bottom_out</item>
    </style>
</resources>
